@model List<Category>
@{
    ViewData["Title"] = "Category";
}

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Categories</h4>
            <a asp-controller="Category" asp-action="Create" class="btn btn-success">
                Create
            </a>
            <div class="table-responsive">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>
                                Category Name
                            </th>
                            <th>
                                Settings
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (Category cg in Model)
                        {
                            <tr>
                                <td>
                                    @cg.Name
                                </td>
                                <td>
                                    <a asp-controller="Category" asp-action="Detail" asp-route-id="@cg.Id" class="btn btn-success">
                                        <i class="mdi mdi-information"></i>
                                    </a>
                                    <a asp-controller="Category" asp-action="Update" asp-route-id="@cg.Id" class="btn btn-warning">Update</a>
                                    <a asp-controller="Category" asp-action="Delete" asp-route-id="@cg.Id" class="btn btn-danger">Delete</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

